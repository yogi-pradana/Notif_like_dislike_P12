<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:padding="10dp"
        android:text="Kirim notifikasi"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/counterGanteng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganteng Banget  : "
        app:layout_constraintTop_toBottomOf="@+id/btn_notif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="-200dp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/txtCounterGanteng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txtGanteng"
        app:layout_constraintTop_toBottomOf="@+id/btn_notif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/counterJelek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mungkin nggak  : "
        app:layout_constraintTop_toBottomOf="@+id/counterGanteng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="-180dp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/txtSakitMata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txtSakitMata"
        app:layout_constraintTop_toBottomOf="@+id/txtCounterGanteng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-15dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>